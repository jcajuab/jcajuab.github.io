---
import type { HTMLAttributes } from "astro/types";

import { requireSlots } from "#/utils";

type Header = HTMLAttributes<"footer">;
interface Props extends Omit<Header, "class"> {
  className?: Header["class"];
}

const { className, ...props } = Astro.props;

requireSlots(Astro, "Header");
---

<header class:list={["px-4 pt-4", className]} {...props}>
  <slot />
</header>
